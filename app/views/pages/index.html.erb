<div class='center-h'>
  <form action='/' method='GET'>
      <input type='date' class='std-input' name='date'>
      <button type='submit' class='btn btn-primary'>Go</button>
  </form>
</div>
<br><br>

<% if @apod.is_a?(NasaApi::Error) %>
  <div class='container-fluid'>
    <h3 style="text-align: center"><%= @error_msg %></h3>
  </div>
<% else %>
  <div class='container-fluid w-100 center-img'>
    <img src="<%= @apod.url %>" class="img-fluid w-100" alt="APOD picture">
  </div>
<% end %>

